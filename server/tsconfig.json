{
    "extends": "../tsconfig.json",
    "include": [
        "src/**/*",
        "src/types/**/*.d.ts"
    ],
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@/*": [
                "./src/*"
            ]
        },
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true
    },
    "ts-node": {
        "esm": true
    }
}