generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String         @id @default(uuid())
  email         String         @unique
  fullName      String
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  assets        Asset[]
  documents     Document[]
  heirs         Heir[]
  ledgerEntries LedgerEntry[]
  notifications Notification[]
}

model Profile {
  id                      String    @id @default(uuid())
  full_name               String?
  email                   String    @unique
  role                    String    @default("user")
  account_type            String    @default("family")
  status                  String    @default("active")
  created_at              DateTime  @default(now())
  updated_at              DateTime  @updatedAt
  avatar_url              String?
  is_2fa_enabled          Boolean   @default(false)
  phone                   String?
  two_factor_method       String    @default("email")
  two_factor_code         String?
  two_factor_code_expires DateTime?
  last_login              DateTime?

  @@map("profiles")
}

model LedgerEntry {
  id          String         @id @default(uuid())
  title       String
  amount      Float
  type        LedgerType
  category    LedgerCategory
  date        DateTime
  description String?
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  userId      String
  user        User           @relation(fields: [userId], references: [id])
}

model Asset {
  id            String         @id @default(uuid())
  name          String
  category      AssetCategory
  value         Float
  description   String?
  location      String?
  purchaseDate  DateTime?
  image         String?
  status        AssetStatus    @default(active)
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
  userId        String
  isForSale     Boolean        @default(true)
  user          User           @relation(fields: [userId], references: [id])
  distributions Distribution[]
  documents     Document[]
}

model Heir {
  id          String             @id @default(uuid())
  name        String
  relation    HeirRelation
  dateOfBirth DateTime?
  email       String?
  phone       String?
  avatar      String?
  createdAt   DateTime           @default(now())
  updatedAt   DateTime           @updatedAt
  userId      String
  user        User               @relation(fields: [userId], references: [id])
  shares      InheritanceShare[]
}

model Document {
  id         String       @id @default(uuid())
  name       String
  type       DocumentType
  url        String
  fileSize   String?
  uploadDate DateTime     @default(now())
  createdAt  DateTime     @default(now())
  updatedAt  DateTime     @updatedAt
  userId     String
  assetId    String?
  asset      Asset?       @relation(fields: [assetId], references: [id])
  user       User         @relation(fields: [userId], references: [id])
}

model Transaction {
  id             String          @id @default(uuid())
  type           TransactionType
  description    String
  amount         Float?
  date           DateTime        @default(now())
  relatedAssetId String?
  relatedHeirId  String?
}

model Notification {
  id      String           @id @default(uuid())
  title   String
  message String
  date    DateTime         @default(now())
  read    Boolean          @default(false)
  type    NotificationType
  userId  String
  user    User             @relation(fields: [userId], references: [id])
}

model Distribution {
  id          String             @id @default(uuid())
  totalAmount Float
  saleDate    DateTime
  status      DistributionStatus @default(pending)
  assetId     String
  asset       Asset              @relation(fields: [assetId], references: [id])
  shares      InheritanceShare[]
}

model InheritanceShare {
  id              String       @id @default(uuid())
  sharePercentage Float
  shareAmount     Float
  shareFraction   String
  heirId          String
  distributionId  String
  distribution    Distribution @relation(fields: [distributionId], references: [id])
  heir            Heir         @relation(fields: [heirId], references: [id])
}

enum AssetCategory {
  property
  investment
  vehicle
  jewelry
  cash
  business
  other
}

enum AssetStatus {
  active
  sold
  pending
}

enum HeirRelation {
  spouse_wife
  spouse_husband
  son
  daughter
  father
  mother
  brother
  sister
  grandfather
  grandmother
}

enum TransactionType {
  asset_added
  asset_sold
  distribution_completed
  document_uploaded
  heir_added
  income_added
  expense_added
}

enum DocumentType {
  will
  deed
  certificate
  contract
  other
}

enum NotificationType {
  sale
  distribution
  document
  general
  ledger
}

enum DistributionStatus {
  pending
  distributed
  completed
}

enum LedgerType {
  INCOME
  EXPENSE
  CREDITOR
  DEBTOR
}

enum LedgerCategory {
  SALARY
  BUSINESS
  RENTAL
  DIVIDEND
  OTHER_INCOME
  UTILITIES
  MAINTENANCE
  TAX
  DEBT
  PERSONAL
  OTHER_EXPENSE
  LOAN
  MORTGAGE
}
